@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.Home>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
    Layout = "Master.cshtml";
}
@Html.GetGridHtml(Model, "grid", "bootstrap3-fluid")
@{ 
    var user = Members.GetByUsername(Members.CurrentUserName);
    if (Members.IsLoggedIn())
    {
        var picture = user.Value<IPublishedContent>("profilePicture");
        
        if (picture != null)
        {
            @:<img src="@picture.Url()" />
        }
    }
}
